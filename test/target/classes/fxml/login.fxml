<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.onlinetest.controller.LoginController" 
            prefWidth="400" prefHeight="300"
            stylesheets="@css/style.css"
            styleClass="login-container">

    <!-- Title -->
    <Label text="Online Test System" layoutX="120" layoutY="20" 
           styleClass="label" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Username -->
    <Label text="Username:" layoutX="50" layoutY="80" styleClass="label"/>
    <TextField fx:id="txtUsername" layoutX="150" layoutY="75" prefWidth="200" styleClass="text-field"/>

    <!-- Password -->
    <Label text="Password:" layoutX="50" layoutY="130" styleClass="label"/>
    <PasswordField fx:id="txtPassword" layoutX="150" layoutY="125" prefWidth="200" styleClass="text-field"/>

    <!-- Login Button -->
    <Button text="Login" layoutX="150" layoutY="180" prefWidth="100" onAction="#handleLogin" styleClass="button"/>

</AnchorPane>
